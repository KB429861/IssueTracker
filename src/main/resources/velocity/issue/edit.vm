#parse("/velocity/layout.vm")
#@mainLayout()
<div class="page-header">
    <h2>Edit issue</h2>
</div>
<form method="post">
    <div class="form-group">
        <label class="control-label">Summary</label>
        <input type="text" class="form-control" name="summary" value="$issue.getSummary()" placeholder="Summary"
               required>
    </div>
    <div class="form-group">
        <label class="control-label">Description</label>
        <textarea name="description" rows="4" class="form-control" content="$issue.getDescription()"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>
#end
